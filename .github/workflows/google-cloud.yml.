name: Google Cloud Integration

on:
  push:
    branches:
      - main

jobs:
  upload:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Google Cloud SDK
      uses: google-github-actions/setup-gcloud@v0
      with:
        project_id: 97946483113
        service_account_key: ${{ secrets.GOOGLE_CLOUD_KEY }}
        export_default_credentials: true

    - name: Upload files to Google Cloud Storage
      run: |
        gsutil cp -r ./path/to/your/files gs://your-bucket-name

  process:
    runs-on: ubuntu-latest
    needs: upload
    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Google Cloud SDK
      uses: google-github-actions/setup-gcloud@v0
      with:
        project_id: 97946483113
        service_account_key: ${{ secrets.GOOGLE_CLOUD_KEY }}
        export_default_credentials: true

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'

    - name: Install dependencies
      run: npm install

    - name: Run script
      env:
        GPT3_API_KEY: ${{ secrets.GPT3_API_KEY }}
      run: node scripts/process_files.js
