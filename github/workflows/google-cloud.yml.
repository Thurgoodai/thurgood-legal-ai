name: Google Cloud Integration

on:
  push:
    branches:
      - main

jobs:
  upload:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Google Cloud SDK
      uses: google-github-actions/setup-gcloud@v0
      with:
        project_id: 97946483113
        service_account_key: ${{ secrets.GOOGLE_CLOUD_KEY }}
        export_default_credentials: true

    - name: Upload files to Google Cloud Storage
      run: |
        gsutil cp -r ./path/to/your/files gs://your-bucket-name

  process:
    runs-on: ubuntu-latest
    needs: upload
    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Google Cloud SDK
      uses: google-github-actions/setup-gcloud@v0
      with:
        project_id: 97946483113
        service_account_key: ${{ secrets.GOOGLE_CLOUD_KEY }}
        export_default_credentials: true

    - name: Download files from Google Cloud Storage
      run: |
        gsutil cp -r gs://your-bucket-name/path/to/your/files ./local-path

    - name: Process files
      run: |
        # Add your processing script here
        python process_files.py

    - name: Upload processed files back to Google Cloud Storage
      run: |
        gsutil cp -r ./local-path/processed gs://your-bucket-name/processed
